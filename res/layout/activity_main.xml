<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#080808"
    tools:context=".MainActivity">

    <ImageView
            android:id="@+id/btnSmileState"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/smiley1"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:importantForAccessibility="yes"
            android:cropToPadding="false"
            android:onClick="setGameState"
            android:background="#080808"
            />

    <TextView
            android:id="@+id/txtTimeTaken"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:text="0000"
            android:textSize = "20dp"
            android:textColor="#FF0000"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btnSmileState"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal"/>

    <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:text="0000"
            android:textSize = "20dp"
            android:textColor="#00FF00"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnSmileState"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal"/>

    <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/btnSmileState"
            android:rowCount="8"
            android:columnCount="8"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:soundEffectsEnabled="true"
            android:clipToPadding="false">
    </GridLayout>

</RelativeLayout>
